<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenhouse_home_background"
    tools:context=".View.GreenhouseSensorsActivity">

    <!--    TODO insert separate TextViews for measurement units    -->
    <!--    TODO textview add more opacity    -->

    <TextView
        android:id="@+id/greenhouseNameTextDetails"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:text="GREENHOUSE NAME"
        android:textAlignment="center"
        android:textColor="@color/greenhouse_dark_green"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/temperatureModule"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/module_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/temperatureIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/temperatures_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temperatureModule" />

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="TEMPERATURE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toEndOf="@+id/temperatureIcon"
        app:layout_constraintTop_toTopOf="@+id/temperatureModule" />

    <TextView
        android:id="@+id/temperatureDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="23°C"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/temperatureTextView"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toEndOf="@+id/temperatureIcon"
        app:layout_constraintTop_toBottomOf="@+id/temperatureTextView" />

    <ImageView
        android:id="@+id/co2Module"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/module_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperatureDetailsTextView" />

    <ImageView
        android:id="@+id/co2Icon"
        android:layout_width="55dp"
        android:layout_height="57sp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/co2_cloud_green"
        app:layout_constraintStart_toStartOf="@+id/co2Module"
        app:layout_constraintTop_toTopOf="@+id/co2Module" />

    <TextView
        android:id="@+id/co2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="CO² LEVEL"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toEndOf="@+id/co2Icon"
        app:layout_constraintTop_toTopOf="@+id/co2Module" />

    <TextView
        android:id="@+id/co2DetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="417"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/co2TextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/co2TextView"
        app:layout_constraintTop_toBottomOf="@+id/co2TextView" />

    <TextView
        android:id="@+id/co2Units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="ppm"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/co2DetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/co2TextView" />

    <ImageView
        android:id="@+id/humidityModule"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/module_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/co2DetailsTextView" />

    <ImageView
        android:id="@+id/humidityIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/humidity_green"
        app:layout_constraintStart_toStartOf="@+id/humidityModule"
        app:layout_constraintTop_toTopOf="@+id/humidityModule" />

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="HUMIDITY LEVEL"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toEndOf="@+id/humidityIcon"
        app:layout_constraintTop_toBottomOf="@+id/co2Module" />

    <TextView
        android:id="@+id/humidityDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="57"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/humidityTextView"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="@+id/humidityTextView"
        app:layout_constraintTop_toBottomOf="@+id/humidityTextView" />

    <TextView
        android:id="@+id/humidityUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="%"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/humidityDetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/humidityTextView" />

    <ImageView
        android:id="@+id/lightModule"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/module_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityDetailsTextView" />

    <ImageView
        android:id="@+id/lightIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/light_bulb_green"
        app:layout_constraintStart_toStartOf="@+id/lightModule"
        app:layout_constraintTop_toBottomOf="@+id/humidityModule" />

    <TextView
        android:id="@+id/lightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="LUMINOSITY"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toEndOf="@+id/lightIcon"
        app:layout_constraintTop_toBottomOf="@+id/humidityModule" />

    <TextView
        android:id="@+id/lightDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="2000"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/lightTextView"
        app:layout_constraintStart_toStartOf="@+id/lightTextView"
        app:layout_constraintTop_toBottomOf="@+id/lightTextView" />

    <TextView
        android:id="@+id/lightUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/source_sans_pro_light"
        android:letterSpacing="0.06"
        android:text="lux"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/lightDetailsTextView"
        app:layout_constraintTop_toBottomOf="@+id/lightTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>